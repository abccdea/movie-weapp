.movie .description {
  font-size: 33rpx;
  color: #485560;
  width: 80%;
  margin: 0rpx auto 100rpx auto;
}

.movie .description .display {
  margin-top: 20rpx;
  color: lightsteelblue;
}

.movie .control {
  display: flex;
  justify-content: space-evenly;
  margin-bottom: 60rpx;
  color: gray;
}

.movie .control .option {
  border: 1rpx solid lightgray;
  border-radius: 6rpx;
  width: 40%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.movie .control text {
  font-size: 30rpx;
  line-height: 42rpx;
}

.movie .control .iconfont {
  padding-bottom: 18rpx;
}