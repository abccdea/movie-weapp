.reviews .list {
  position: absolute;
  left: 0;
  right: 0;
  top: 70rpx;
  bottom: 120rpx;
  padding-bottom: 30rpx;
  
}

.reviews .list .card {
  padding: 60rpx;
  background-color: #FFFFFF;
  border-bottom: 2rpx solid lightgray;
}

.reviews .list .card:last-child {
  border-bottom: none;
}

.reviews .list .card .user {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.reviews .list .card .user image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.reviews .list .card .content {
  font-size: 35rpx;
}

.reviews .no-data {
  text-align: center;
}

.reviews .no-data image {
  width: 80%;
  margin: 30rpx auto;
}

.reviews .footer {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  border-top: 1rpx solid lightgray;
}